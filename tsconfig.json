{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2015",
			"es2017",
			"dom"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"files": [
		"src/**"
	]
}